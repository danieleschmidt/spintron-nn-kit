{
  "input_validation": {
    "max_file_size_mb": 100,
    "allowed_extensions": [
      ".json",
      ".yaml",
      ".csv",
      ".txt"
    ],
    "sanitize_inputs": true
  },
  "logging": {
    "mask_sensitive_data": true,
    "audit_trail": true,
    "retention_days": 90
  },
  "network": {
    "allowed_ports": [
      8080,
      9090
    ],
    "enable_cors": false,
    "rate_limiting": true
  }
}